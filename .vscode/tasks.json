{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and run Java",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "javac Basics.java && java Basics < input.txt > output.txt"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
